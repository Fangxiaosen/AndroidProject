<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="TextStyle">
        <!-- Customize your theme here．-->
        <item name="android:textSize">27sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Theme.MyApplication" parent="Base.Theme.MyApplication" />


    <!-- 继承自Widget.AppCompat.Button，添加自定义属性 -->
    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button">
        <!-- 设置按钮背景颜色 -->
        <item name="android:background">@drawable/custom_button_background</item>
        <!-- 设置文字颜色 -->
        <item name="android:textColor">@color/button_text_color</item>
        <!-- 设置文字大小 -->
        <item name="android:textSize">16sp</item>
        <!-- 设置圆角 -->
        <item name="android:backgroundTint">@color/button_background_tint</item>
        <!-- 设置文字与背景之间的内边距 -->
        <item name="android:padding">10dp</item>
        <!-- 设置按钮的高度 -->
        <item name="android:minHeight">50dp</item>
        <!-- 设置按钮的宽度 -->
        <item name="android:minWidth">120dp</item>
    </style>


    <!-- 应用主题 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- 主色调 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 按钮的自定义样式 -->
    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- TextView 的自定义样式 -->
    <style name="TextViewTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- 搜索框样式 -->
    <style name="EditTextSearch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/ic_search</item>
    </style>

</resources>